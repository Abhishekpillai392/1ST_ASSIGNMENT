    <constructor-arg ref="r"></constructor-arg>
    </bean>
    
    <bean id="ic" class="ASS.ICICI" >
    <constructor-arg ref="r"></constructor-arg>
    </bean>
    
    <bean id="idb" class="ASS.IDBI" >
    <constructor-arg ref="r"></constructor-arg>
    </bean>
    
