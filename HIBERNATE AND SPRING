	System.out.println(b1.getirate());
	
    BANK b2 = ac.getBean("ic",BANK.class);
	
	System.out.println(b2.getirate());
	
    BANK b3 = ac.getBean("idb",BANK.class);
	
	System.out.println(b3.getirate());

	}

}


